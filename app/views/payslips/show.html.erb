<div class="container border p-5 m-2 rounded-3 bg-white" style="height: 98vh;">
  <div class="form-container m-2 p-4 rounded-3 d-flex">
      <%= image_tag("marry_poppins.png", class: "payslip_avatar")%>
      <div class="m-2">
        <h2 class= "p-0 m-0"><%= @contract.nanny.last_name %> <%= @contract.nanny.first_name %></h1>
        <p class= "p-0 m-0">Nounou à domicile</h2>
        <p class= "p-0 m-0">En contract depuis le <%= @contract.start_date.strftime("%e %B %Y")  %></p>
      </div>
        <div class="btn btn-primary align-self-end ms-auto">Consulter le contrat</div>

  </div>

  <div class="row align-items-start justify-content-between m-2">
    <div class="col-4 form-container rounded-3 p-2">
      <div class="d-flex justify-content-between">
        <h3><%=@contract.start_date.strftime(" %B %Y")%></h3>
        <div class="dropdown">
          <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Mois précédents
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Action</a></li>
            <li><a class="dropdown-item" href="#">Another action</a></li>
            <li><a class="dropdown-item" href="#">Something else here</a></li>
          </ul>
        </div>
      </div>
      <div>
        <p>XX jours travaillés</p>
        <p>XX jours d'absence</p>
      </div>


      </div>
    <div class="col-6 form-container rounded-3 p-2">
      <ul>
        <li>Gross salary : <%= @payslip.gross_salary %></li>
        <li>Employer contributions : <%= @payslip.employer_contributions %></li>
        <li>Employee contributions : <%= @payslip.employee_contributions %></li>
        <li>Paid amount : <%=@payslip.paid_amount  %></li>
      </ul>

      <div class="d-flex justify-content-between" data-controller="payslip-update" data-payslip-update-id-value="<%= @payslip.id %>" >
        <div class="d-flex align-items-center">
          <button class="btn btn-primary btn-sm" data-action="click->payslip-update#bankUpdate" >Virer le salaire</button>
          <i class="fas fa-sync-alt fa-spin payslip-icons p-2 hidden" data-payslip-update-target="bankLoader"></i>
          <i class="fa-solid fa-check payslip-icons p-2 hidden" data-payslip-update-target="bankSuccess"></i>
        </div>
        <div class="d-flex align-items-center"   >
          <button class="btn btn-primary btn-sm"  data-action="click->payslip-update#pajeEmploiUpdate" >Transmettre à PAJEemploi</button>
          <i class="fas fa-sync-alt fa-spin payslip-icons p-2 hidden" data-payslip-update-target="pajeEmploiLoader"></i>
          <i class="fa-solid fa-check payslip-icons p-2 hidden" data-payslip-update-target="pajeEmploisuccess"></i>
        </div>
      </div>
    </div>

  </div>




</div>
