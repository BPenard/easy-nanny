<div class="event-grid">
      <% @events.each do |event| %>
        <div class="form-container contract-card d-none" data-infos="<%= event.start_date.strftime("%A").downcase %>" >
        <div class="d-flex justify-content-between">
          <div class="event-hour">
            <%= event.start_date.strftime("%k") %>h

          </div>
            <%= event.start_date.strftime("%A") %>
          <div class="event-type">
            <%= event.type %>
          </div>
        </div>
        <div>
          <%= event.description %>
        </div>
        <div class="d-flex justify-content-end align-items-center">
          <div>
            <%= event.child.first_name %>
          </div>
          <div>
            <%= cl_image_tag event.child.photo.key, class: "avatar", alt: "user avatar", width: 40, height: 40, crop: :thumb, gravity: :face %>
          </div>
        </div>
        </div>
      <% end %>

    </div>
