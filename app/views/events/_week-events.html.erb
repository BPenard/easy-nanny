<div class="event-grid">
  <% events.each do |event| %>
    <div class="form-container contract-card d-none" data-welcome-target="<%= event.start_date.strftime("%A").downcase %>Card" >
    <div class="d-flex justify-content-between">
      <div class="event-hour">
        <%= event.start_date.strftime("%k") %>h
      </div>
      <div  class="d-flex align-items-center">
      <div>
        <h2><%= event.child.first_name %></h2>
      </div>
      <div>
        <%= cl_image_tag event.child.photo.key, class: "avatar", alt: "user avatar", width: 40, height: 40, crop: :thumb, gravity: :face %>
      </div>
      </div>
      </div>
      <div class="event-type">
        <%= event.type %>
      </div>
    <div>
      <%= event.description %>
    </div>
    <div class="d-flex justify-content-end align-items-center">


    </div>
    </div>
  <% end %>

</div>
