<div class="container p-5">

  <div class="header mb-2">
    <h2>Cr√©er un nouveau contrat</h2>
  </div>

  <div class="container d-flex flex-column align-items-center">
    <div class="breadcrumb d-flex justify-content-between">
          <div class="step current">1</div>
          <div class="step">2</div>
          <div class="step">3</div>
    </div>

    <div class="form-container p-4 rounded-5 shadow-lg w-75">
      <%= simple_form_for(@nanny_contract) do |f| %>
        <%= f.input :nanny_id, required: false, collection: User.all_nannies, label_method: -> (nanny) {
          "#{nanny.first_name} #{nanny.last_name}"
        }, label: 'Choix de la Nanny', input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
        <div class="text-center mt-4">
          <%= f.submit 'Suivant', class: 'btn btn-outline-light btn-lg rounded-5' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
